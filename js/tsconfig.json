{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "preserveWatchOutput": true,
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "target": "es2017",
    "types": ["mocha", "node"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
